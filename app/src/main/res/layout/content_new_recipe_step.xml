<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.recetapp.CreateRecipeActivity"
    tools:showIn="@layout/tab_fragment_recipestep">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lnLayout"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo paso"
            android:id="@+id/newStepBt"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VENGA TU"
            android:id="@+id/removeStepBt"
            android:layout_above="@+id/newStepBt"
            android:layout_alignEnd="@+id/newStepBt"
            android:layout_marginBottom="38dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txStep"
            android:layout_above="@+id/removeStepBt"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
